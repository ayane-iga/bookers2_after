<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h2>User info</h2>
      <table class="table">
        <tr><%= attachment_image_tag current_user, :profile_image, :fill,60,60, format:'jpeg',fallback: "no_image.jpg" %></tr>
        <tr>
          <th>name</th>
          <th><%= current_user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= current_user.introduction %></th>
        </tr>
      </table>

        <div class="row">
        <%= link_to "", edit_user_path(current_user.id), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench"%>
      </div>



      <h2>New book</h2>
         <%= form_for(@hon) do |f| %>
            <% if @hon.errors.any? %>
              <div id="error_explanation" class="alert alert-danger">
              <p><%= @hon.errors.count %>error prohibited this book from being saved:</p>
              <ul>
              <% @hon.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
              </ul>
              </div>
            <% end %>

      <div class="field row">
      <label for="book_opinion">Title</label>
      <%= f.text_field :title, class:"col-xs-12" %>
    </div>

      <div class="field row">
      <label for="book_opinion">Opinion</label>
      <%= f.text_area :body, class:"col-xs-12" %>
    </div>

<br/>
      <div class="actions row">
      <%= f.submit('Create Book',class:"btn btn-primary col-xs-12") %>
      </div>
      <% end %>
    </div>

  <div class="col-xs-9">
   <h2>Book detail</h2>

   <table class='table table-hover table-inverse'>

    <tr>
     <th><%= attachment_image_tag @book.user, :profile_image, :fill,60,60, format:'jpeg',fallback: "no_image.jpg",:size=>'60x60' %>
      <br/>
      <%= link_to user_path(@book.user) do %>
      <%= @book.user.name %>
      <% end %>
    </th>
    <th><%= @book.title %></th>
    <th><%= @book.body %></th>


    <% if @book.user == current_user %>
    <th><%=link_to "Edit", edit_book_path(@book.id),class:"btn btn-success" %></th>
    <th><%= link_to "Destroy", book_path(@book.id),class:"btn btn-danger", method: :delete, date:{confirm:'削除しますか？'} %></th>
    <% end %>

  </tr>
</table>


</div>
</div>
</div>