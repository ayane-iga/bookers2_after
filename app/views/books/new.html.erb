<h1>New book</h1>
<%= form_for(@hon) do |f| %>
<% if @hon.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @hon.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h4>Title</h4>
<%= f.text_field :title, :size=>"28"%>

<h4>Opinion</h4>
<%= f.text_area :body, :size=>"30" %>

<%= f.submit('Create Book',class: 'btn btn-primary') %>
<% end %>