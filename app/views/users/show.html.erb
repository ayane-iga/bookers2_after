<div class="container">
  <div class="row">
    <div class="col-xs-3">

<%= render 'profile', user:current_user %>
<%= render 'books/newbook', book:@hon %>


    <div class="col-xs-9">

      <h2>Books</h2>

      <table class='table table-hover table-inverse'>
        <thead>
       <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th></th>
      </tr>
    </thead>

      <% @books.each do |book| %>
      <tbody>
      <tr>
      <td><%= attachment_image_tag @user, :profile_image, :fill,60,60, format:'jpeg',fallback: "no_image.jpg",:size=>'60x60' %></td>
        <td><%=link_to book_path(book.id) do %>
          <%= book.title %>
          <% end %>
        </td>
        <td><%= book.body %></td>

        <td>
            コメント数：<%= book.book_comments.count %>
        </td>

        <% end %>
      </tr>
    </tbody>
    </table>
  </div>
</div>
</div>
</div>

