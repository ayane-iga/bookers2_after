<table class='table table-hover table-inverse'>

    <tr>
     <th><%= attachment_image_tag book.user, :profile_image, :fill,60,60, format:'jpeg',fallback: "no_image.jpg",:size=>'60x60' %>
      <br/>
      <%= link_to user_path(book.user) do %>
      <%= book.user.name %>
      <% end %>
    </th>
    <th><%= book.title %></th>
    <th><%= book.body %></th>


    <% if book.user == current_user %>
    <th><%=link_to "Edit", edit_book_path(book.id),class:"btn btn-success" %></th>
    <th><%= link_to "Destroy", book_path(book.id),class:"btn btn-danger", method: :delete, date:{confirm:'削除しますか？'} %></th>

    <% end %>

        <td class= "book_<%=book.id %>">
          <%= render 'favorites/favorite', book: book %>
        </td>


  </tr>
</table>